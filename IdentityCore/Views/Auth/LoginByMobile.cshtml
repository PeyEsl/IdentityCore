@model IdentityCore.Models.ViewModels.LoginWithPhoneViewModel

@{
    ViewData["Title"] = "Login By Mobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Login</h1>

<h4>Login With Phone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LoginByMobile" asp-controller="Auth" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Login" asp-controller="Auth">Login</a>
</div>

