@model IEnumerable<IdentityCore.Models.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Roles</h1>

<p>
    <a asp-action="Create" asp-controller="Role">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Claims)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>
                    @foreach (var claim in role.Claims!)
                    {
                        <div><b>Type: </b>@claim.Type | <b>Value: </b>@claim.Value</div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Role" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Details" asp-controller="Role" asp-route-id="@role.Id">Details</a> |
                    <a asp-action="Delete" asp-controller="Role" asp-route-id="@role.Id">Delete</a> |
                    <a asp-action="RoleClaims" asp-controller="Claim" asp-route-roleName="@role.Name">Claims</a>
                </td>
            </tr>
        }
    </tbody>
</table>
