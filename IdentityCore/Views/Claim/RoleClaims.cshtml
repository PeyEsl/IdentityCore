@model IEnumerable<IdentityCore.Models.ViewModels.ClaimViewModel>

@{
    ViewData["Title"] = "Role Claims";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.FirstOrDefault()!.RoleName</h1>

<p>
    <a asp-action="CreateRoleClaim" asp-route-roleName="@Model.FirstOrDefault()!.RoleName">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Type != null && item.Value != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        <a asp-action="EditRoleClaim" asp-controller="Claim" asp-route-roleName="@item.RoleName" asp-route-claimType="@item.Type">Edit</a> |
                        <a asp-action="DeleteRoleClaim" asp-controller="Claim" asp-route-roleName="@item.RoleName" asp-route-claimType="@item.Type" asp-route-claimValue="@item.Value">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
